<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C6C75"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SISTEM PARKIR"
        android:textSize="38sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/v_border"
        android:layout_width="28dp"
        android:layout_height="180dp"
        android:background="#4E5157"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/v_outline_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/outline"
        app:layout_constraintTop_toTopOf="@id/v_border_top"
        app:layout_constraintStart_toStartOf="@id/v_border_top"
        app:layout_constraintEnd_toEndOf="@id/v_border_left"
        app:layout_constraintBottom_toBottomOf="@id/v_border_bottom"/>

    <View
        android:id="@+id/v_outline_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/outline"
        app:layout_constraintTop_toTopOf="@id/v_border_top"
        app:layout_constraintEnd_toEndOf="@id/v_border_top"
        app:layout_constraintStart_toEndOf="@id/v_border_right"
        app:layout_constraintBottom_toBottomOf="@id/v_border_bottom"/>

    <View
        android:id="@+id/v_box_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/v_border_top"
        app:layout_constraintStart_toStartOf="@id/v_border_top"
        app:layout_constraintEnd_toEndOf="@id/v_border_left"
        app:layout_constraintBottom_toBottomOf="@id/v_border_bottom"/>

    <View
        android:id="@+id/v_box_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/v_border_top"
        app:layout_constraintEnd_toEndOf="@id/v_border_top"
        app:layout_constraintStart_toEndOf="@id/v_border_right"
        app:layout_constraintBottom_toBottomOf="@id/v_border_bottom"/>

    <View
        android:id="@+id/v_out_left"
        android:layout_width="6dp"
        android:layout_height="180dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/v_border_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/v_out_right"
        android:layout_width="6dp"
        android:layout_height="180dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/v_border_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/v_in_left"
        android:layout_width="6dp"
        android:layout_height="130dp"
        android:background="#6C6C75"
        app:layout_constraintStart_toStartOf="@id/v_border_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/v_in_right"
        android:layout_width="6dp"
        android:layout_height="130dp"
        android:background="#6C6C75"
        app:layout_constraintEnd_toEndOf="@id/v_border_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/v_border_left"
        android:layout_width="6dp"
        android:layout_height="180dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@id/v_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/v_border_right"
        android:layout_width="6dp"
        android:layout_height="180dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/v_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/v_border_top"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/white"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toTopOf="@id/v_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/v_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/white"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="@id/v_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P1"
        android:textStyle="bold"
        android:rotation="90"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/v_box_left"
        app:layout_constraintEnd_toEndOf="@id/v_box_left"
        app:layout_constraintStart_toStartOf="@id/v_box_left"
        app:layout_constraintBottom_toBottomOf="@id/v_box_left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P2"
        android:textStyle="bold"
        android:rotation="270"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/v_box_right"
        app:layout_constraintEnd_toEndOf="@id/v_box_right"
        app:layout_constraintStart_toStartOf="@id/v_box_right"
        app:layout_constraintBottom_toBottomOf="@id/v_box_right"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/v_border_bottom"
        app:layout_constraintStart_toStartOf="@id/v_border_bottom">

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#ff99cc00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/ll"
        app:layout_constraintStart_toStartOf="@id/v_border_bottom">

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#ffff4444"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unavailable"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/outline"
        app:layout_constraintTop_toBottomOf="@id/v_border_bottom"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="75dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/outline"
        app:layout_constraintTop_toBottomOf="@id/v_border_bottom"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>